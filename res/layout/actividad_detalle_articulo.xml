<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ActividadDetalleArticulo">

    <TextView
        android:id="@+id/texto_nombre_articulo_detalle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Celular nuevo xiaomi"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/etiqueta_detalle_compra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Comprado el:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto_nombre_articulo_detalle" />

    <TextView
        android:id="@+id/texto_fecha_compra_detalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03/06/2025"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etiqueta_detalle_compra" />

    <TextView
        android:id="@+id/etiqueta_detalle_vencimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="GarantÃ­a vence el:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto_fecha_compra_detalle" />

    <TextView
        android:id="@+id/texto_fecha_vencimiento_detalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03/06/2027"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etiqueta_detalle_vencimiento" />

    <ImageView
        android:id="@+id/imagen_recibo_detalle"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto_fecha_vencimiento_detalle"
        tools:src="@android:drawable/ic_menu_camera"
        android:contentDescription="Foto del recibo"/>

    <Button
        android:id="@+id/boton_compartir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compartir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>